<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <description>Custom Checkbox</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="stringOptions" type="String" label="Values" description="The String with the available values for the Picklist"></property>
            <property name="strSelectedValues" type="String" label="Chosen Value" description="The String with the value selected at the picklist"></property>
            <property name="value" type="String" label="Selected value"></property>
            <property name="type" type="String" label="Component Type" description="default checkbox (options: checkbox/radio/button/dropdown)"></property>
        </targetConfig>
    </targetConfigs>
    <masterLabel>Custom Checkbox</masterLabel>
</LightningComponentBundle>
